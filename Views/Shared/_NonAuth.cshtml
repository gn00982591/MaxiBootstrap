<!DOCTYPE html>
<html lang="zh-tw">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex,nofollow" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="cache-control" content="no-cache">
    <link href="/Content/images/icon.ico" rel="shortcut icon" />
    <title>機車物語</title>
    <meta name="description" content="Maxi Bootstrap" />
    @Styles.Render("~/Content/css")
    <link href="~/Content/way.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Scripts/vegas-2.4.0/vegas.min.css">
    <meta name="google-signin-client_id" content="@(CsProp.isOAuth_ClientID)">
</head>
<body>
    <div id="outer-container">
        <section id="main-content" class="clearfix">
            <article id="intro" class="section-wrapper clearfix">
                <div class="content-wrapper clearfix wow fadeInDown" data-wow-delay="0.3s">
                    <div class="col-sm-10 col-md-9 pull-right">
                        <section class="feature-text">
                            <h1 class="shadow">機車物語</h1>
                            @RenderBody()
                        </section>
                    </div>
                </div>
            </article>
        </section>
        @Scripts.Render("~/bundles/jquery")
        @{Html.RenderPartial("~/Views/PARTVIEW/_CopyRight.cshtml"); }
    </div>
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/vegas-2.4.0/vegas.min.js"></script>
    <script src="~/Scripts/jquery.ext.js" type="text/javascript"></script>
    <script>
        $(window).on("load", function () {
            /*背景*/
            $("body").vegas({
                animation: 'random',
                slides: [{ src: '@(Url.Content("~/Content/images/cssLgoinBg.min.jpg"))' }]
            });
        });
    </script>
</body>
</html>
